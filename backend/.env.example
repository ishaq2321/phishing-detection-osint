# ============================================================================
# Phishing Detection System - Environment Configuration
# ============================================================================
# Copy this file to .env and customize values for your environment.
# Never commit .env to version control!
#
# Author: Ishaq Muhammad (PXPRGK)
# Course: BSc Thesis - ELTE Faculty of Informatics
# ============================================================================

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
# Options: development, testing, production
ENVIRONMENT=development

# Analysis engine: nlp (spaCy) or llm (future integration)
ANALYZER_ENGINE=nlp

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode (verbose logging, detailed errors)
DEBUG=false

# -----------------------------------------------------------------------------
# Timeout Settings (in seconds)
# -----------------------------------------------------------------------------
# WHOIS lookup timeout
WHOIS_TIMEOUT=10

# DNS resolution timeout
DNS_TIMEOUT=5

# Reputation API timeout
REPUTATION_TIMEOUT=10

# HTTP request timeout
HTTP_TIMEOUT=10

# Maximum retry attempts for failed requests
MAX_RETRIES=3

# Delay between retries (seconds)
RETRY_DELAY_SECONDS=1.0

# -----------------------------------------------------------------------------
# External API Keys (Optional - Leave empty if not available)
# -----------------------------------------------------------------------------
# VirusTotal API key for reputation checks
# Get yours at: https://www.virustotal.com/gui/join-us
VIRUSTOTAL_API_KEY=

# AbuseIPDB API key for IP reputation
# Get yours at: https://www.abuseipdb.com/api
ABUSEIPDB_API_KEY=

# Google Safe Browsing API key
# Get yours at: https://developers.google.com/safe-browsing
GOOGLE_SAFE_BROWSING_API_KEY=

# -----------------------------------------------------------------------------
# API Settings
# -----------------------------------------------------------------------------
# Allowed CORS origins (comma-separated, or * for all)
CORS_ORIGINS=*

# Rate limit: requests per minute
API_RATE_LIMIT=100

# API route prefix
API_PREFIX=/api

# -----------------------------------------------------------------------------
# Cache Settings
# -----------------------------------------------------------------------------
# Enable response caching
CACHE_ENABLED=true

# Cache TTL in seconds (default: 1 hour)
CACHE_TTL_SECONDS=3600

# -----------------------------------------------------------------------------
# Analysis Thresholds
# -----------------------------------------------------------------------------
# Score threshold for HIGH risk (0.0 - 1.0)
HIGH_RISK_THRESHOLD=0.7

# Score threshold for MEDIUM risk (0.0 - 1.0)
# Must be less than HIGH_RISK_THRESHOLD
MEDIUM_RISK_THRESHOLD=0.4
